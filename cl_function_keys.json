{
    "title": "CapsLock Enhancement - Function Keys",
    "rules": [
      {
        "description": "function keys",
        "manipulators": [
            {
                "description": "caps_lock + q to escape",
                "conditions": [
                  {
                    "name": "caps_lock_mode",
                    "type": "variable_if",
                    "value": 1
                  },
                  {
                    "name": "caps_lock_space_mode",
                    "type": "variable_if",
                    "value": 0
                  }
                ],
                "from": {
                  "key_code": "w",
                  "modifiers": {}
                },
                "to": [
                  {
                    "key_code": "escape",
                    "modifiers": "any"
                  }
                ],
                "type": "basic"
              },
              {
                "description": "caps_lock + 1 to f1",
                "conditions": [
                  {
                    "name": "caps_lock_mode",
                    "type": "variable_if",
                    "value": 1
                  },
                  {
                    "name": "caps_lock_space_mode",
                    "type": "variable_if",
                    "value": 0
                  }
                ],
                "from": {
                  "key_code": "1",
                  "modifiers": {}
                },
                "to": [
                  {
                    "key_code": "f1",
                    "modifiers": {}
                  }
                ],
                "type": "basic"
              },
              {
                "description": "caps_lock + 2 to f2",
                "conditions": [
                  {
                    "name": "caps_lock_mode",
                    "type": "variable_if",
                    "value": 1
                  },
                  {
                    "name": "caps_lock_space_mode",
                    "type": "variable_if",
                    "value": 0
                  }
                ],
                "from": {
                  "key_code": "2",
                  "modifiers": {}
                },
                "to": [
                  {
                    "key_code": "f2",
                    "modifiers": {}
                  }
                ],
                "type": "basic"
              }
            ]
        }
    ]
}
        